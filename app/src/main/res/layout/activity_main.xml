<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Welcome to SA Tourism App"
        android:textColor="@android:color/black"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/spinnerlbl"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@id/welcome"
        android:layout_marginTop="50dp"
        android:text="Select Province"
        android:textColor="@android:color/black"
        android:textSize="15dp" />
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/spinnerlbl"
        android:layout_below="@id/welcome"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/attraction"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/spinner"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="50dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/add"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/attraction"
        android:layout_marginTop="200dp"
        android:text="add new place"
        android:visibility="invisible"
        tools:visibility="invisible" />

</RelativeLayout>